generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model Cart {
  id          String      @id
  token       String      @unique
  createdAt   DateTime
  payload     String      // Complete webhook payload as JSON
  processed   Boolean     @default(false)
  status      CartStatus?
  processedAt DateTime?
  
  @@index([createdAt])
  @@index([processed])
  @@index([createdAt, processed])
}

enum CartStatus {
  ABANDONED
  RECOVERED
}
